    "dev": "concurrently -k -n \"NEXT,DATA,JEKYLL,J-BUILD\" -c \"bgBlue.bold,bgRed.bold,bgGreen.bold,bgGrey.bold\" \"node server.js\" \"http-server _site -p 8001\" \"npm run watch:build:jekyll\" \"npm run repeat:build\"",
